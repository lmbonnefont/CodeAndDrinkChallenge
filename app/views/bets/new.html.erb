<%= simple_form_for [@game, @bet], url: user_game_bets_path(current_user, @game), method: :post do |f| %>
  <%= f.input :shot %>
  <%= f.input :player, collection: @game.players %>
  <%= f.input :bettor, collection: @game.bettors %>
  <%= f.submit "Good luck Sir!", class: "btn btn-primary" %>
<% end %>
